<gui>
	<image name="background" texture="background" />
    <image name="city" />
    <widget size="800 600">
        <widget style="tabs" size="600 400">
			<text text="Select city" characterSize="32" style="darkText" />
            <widget size="500 220">
				<scrollarea name="scrollArea" maxVisibleSize="500 188" style="scrollarea">
					<vboxlayout />
				</scrollarea>
                <vboxlayout />
                <vboxlayout spacing="16" margins="0 16 0 16" />
            </widget>
            <widget>
				<button name="removeCityButton" size="192 36" style="button">
					<text text="Remove" characterSize="24" style="darkText" />
					<hboxlayout hAlignment="center" vAlignment="center" />
				</button>
				<button name="loadCityButton" size="192 36" style="button">
					<text text="Load" characterSize="24" style="darkText" />
					<hboxlayout hAlignment="center" vAlignment="center" />
				</button>
				<hboxlayout spacing="16" />
            </widget>
            <vboxlayout hAlignment="center" vAlignment="top" spacing="16" margins="32 32 32 32" />
        </widget>
        <vboxlayout hAlignment="center" vAlignment="center" />
    </widget>
</gui>
