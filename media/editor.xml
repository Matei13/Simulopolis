		<button name="industrialButton" size="192 16" message="industrial" style="button">
			<text name="industrialText" text="Industrial Zone $300" characterSize="12" style="button" />
			<hboxlayout vAlignment="center" />
		</button>
		<button name="roadButton" size="192 16" message="road" style="button">
			<text name="roadText" text="Road $100" characterSize="12" style="button" />
			<hboxlayout vAlignment="center" />
		</button>
		<vboxlayout />
	</widget>
	<text name="selectionCostText" characterSize="12" style="text" />
