	<widget name="rightMenu">
		<button name="grassMenu" size="32 32" message="grass" style="button">
			<image name="grassMenuImage" texture="grass" size="24 24" />
			<hboxlayout hAlignment="center" vAlignment="center" />
		</button>
		<button name="forestMenu" size="32 32" message="forest" style="button">
			<image name="forestMenuImage" texture="forest" size="24 24" />
			<hboxlayout hAlignment="center" vAlignment="center" />
		</button>
		<button name="residentialMenu" size="32 32" message="residential" style="button">
			<image name="residentialMenuImage" texture="residential" rect="0 32 132 132" size="24 24" />
