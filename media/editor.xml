<gui>
	<widget name="rightClickMenu" visible="false">
		<button name="grassButton" size="192 16" message="grass" style="button">
			<text name="grassText" text="Grass $50" characterSize="12" style="button" />
			<hboxlayout vAlignment="center" />
		</button>
		<button name="forestButton" size="192 16" message="forest" style="button">
			<text name="forestText" text="Forest $100" characterSize="12" style="button" />
			<hboxlayout vAlignment="center" />
		</button>
		<button name="residentialButton" size="192 16" message="residential" style="button">
